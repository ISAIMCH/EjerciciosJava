digraph Problema4_14 {
    rankdir=TB;
    node [fontname="Arial", fontsize=11, style=filled, fillcolor=white];
    edge [fontname="Arial", fontsize=10];

    // Nodos principales - Inicio
    inicio [shape=ellipse, label="Inicio", fillcolor="#4A90E2"];
    
    // Inciso a) - Mayor costo de dulces
    asign_maydul [shape=box, label="MAYDUL = PROD[0,0]\nMES = 1", fillcolor="#B3E5FC"];
    init_i1 [shape=box, label="I = 1", fillcolor="#B3E5FC"];
    cond_i1 [shape=diamond, label="¿I < 12?", fillcolor="#FFD54F"];
    comp_dulces [shape=diamond, label="¿PROD[I,0] >\nMAYDUL?", fillcolor="#FFD54F"];
    upd_maydul [shape=box, label="MAYDUL = PROD[I,0]\nMES = I+1", fillcolor="#B3E5FC"];
    incr_i1 [shape=box, label="I = I + 1", fillcolor="#B3E5FC"];
    print_mes_dulces [shape=egg, label="Imprimir MES\n(Mayor dulces)", fillcolor="#FFE082"];
    
    // Inciso b) - Promedio bebidas
    asign_sum [shape=box, label="SUM = 0\nI = 0", fillcolor="#B3E5FC"];
    cond_i2 [shape=diamond, label="¿I < 12?", fillcolor="#FFD54F"];
    sum_bebidas [shape=box, label="SUM = SUM + PROD[I,1]", fillcolor="#B3E5FC"];
    incr_i2 [shape=box, label="I = I + 1", fillcolor="#B3E5FC"];
    calc_promedio [shape=box, label="PROMEDIO = SUM / 12", fillcolor="#B3E5FC"];
    print_promedio [shape=egg, label="Imprimir PROMEDIO", fillcolor="#FFE082"];
    
    // Inciso c) - Mayor y menor bebidas
    asign_beb [shape=box, label="MAYBEB = PROD[0,1]\nMENBEB = PROD[0,1]\nMESMAY = 1, MESMEN = 1\nI = 1", fillcolor="#B3E5FC"];
    cond_i3 [shape=diamond, label="¿I < 12?", fillcolor="#FFD54F"];
    comp_max_beb [shape=diamond, label="¿PROD[I,1] >\nMAYBEB?", fillcolor="#FFD54F"];
    upd_max_beb [shape=box, label="MAYBEB = PROD[I,1]\nMESMAY = I+1", fillcolor="#B3E5FC"];
    comp_min_beb [shape=diamond, label="¿PROD[I,1] <\nMENBEB?", fillcolor="#FFD54F"];
    upd_min_beb [shape=box, label="MENBEB = PROD[I,1]\nMESMEN = I+1", fillcolor="#B3E5FC"];
    incr_i3 [shape=box, label="I = I + 1", fillcolor="#B3E5FC"];
    print_mayor_menor_beb [shape=egg, label="Imprimir MESMAY, MAYBEB\nMESMEN, MENBEB", fillcolor="#FFE082"];
    
    // Inciso d) - Menor costo en diciembre
    asign_menor [shape=box, label="MENOR = PROD[11,0]\nDEP = 1\nI = 1", fillcolor="#B3E5FC"];
    cond_i4 [shape=diamond, label="¿I < 3?", fillcolor="#FFD54F"];
    comp_menor [shape=diamond, label="¿PROD[11,I] <\nMENOR?", fillcolor="#FFD54F"];
    upd_menor [shape=box, label="MENOR = PROD[11,I]\nDEP = I+1", fillcolor="#B3E5FC"];
    incr_i4 [shape=box, label="I = I + 1", fillcolor="#B3E5FC"];
    print_menor_dic [shape=egg, label="Imprimir DEP, MENOR", fillcolor="#FFE082"];
    
    // Salida final
    salida [shape=egg, label="Imprimir MES, PROMEDIO\nMESMAY, MAYBEB\nMESMEN, MENBEB\nDEP, MENOR", fillcolor="#C8E6C9"];
    fin [shape=ellipse, label="Fin", fillcolor="#4A90E2"];

    // Conexiones - Inciso a
    inicio -> asign_maydul;
    asign_maydul -> init_i1;
    init_i1 -> cond_i1;
    cond_i1 -> comp_dulces [label="Sí"];
    comp_dulces -> upd_maydul [label="Sí"];
    upd_maydul -> incr_i1;
    comp_dulces -> incr_i1 [label="No"];
    incr_i1 -> cond_i1;
    cond_i1 -> print_mes_dulces [label="No"];
    
    // Conexiones - Inciso b
    print_mes_dulces -> asign_sum;
    asign_sum -> cond_i2;
    cond_i2 -> sum_bebidas [label="Sí"];
    sum_bebidas -> incr_i2;
    incr_i2 -> cond_i2;
    cond_i2 -> calc_promedio [label="No"];
    calc_promedio -> print_promedio;
    
    // Conexiones - Inciso c
    print_promedio -> asign_beb;
    asign_beb -> cond_i3;
    cond_i3 -> comp_max_beb [label="Sí"];
    comp_max_beb -> upd_max_beb [label="Sí"];
    upd_max_beb -> comp_min_beb;
    comp_max_beb -> comp_min_beb [label="No"];
    comp_min_beb -> upd_min_beb [label="Sí"];
    upd_min_beb -> incr_i3;
    comp_min_beb -> incr_i3 [label="No"];
    incr_i3 -> cond_i3;
    cond_i3 -> print_mayor_menor_beb [label="No"];
    
    // Conexiones - Inciso d
    print_mayor_menor_beb -> asign_menor;
    asign_menor -> cond_i4;
    cond_i4 -> comp_menor [label="Sí"];
    comp_menor -> upd_menor [label="Sí"];
    upd_menor -> incr_i4;
    comp_menor -> incr_i4 [label="No"];
    incr_i4 -> cond_i4;
    cond_i4 -> print_menor_dic [label="No"];
    
    // Conexiones - Salida final
    print_menor_dic -> salida;
    salida -> fin;
}
